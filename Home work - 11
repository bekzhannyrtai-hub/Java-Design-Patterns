public class ECommerceSystem {
    public static void main(String[] args) {
        Client client = new Client("Алихан", "a@mail.com");
        Admin admin = new Admin("Администратор", "admin@mail.com");

        Product p1 = new Product(1, "Ноутбук", "Игровой", 350000, 5, "Электроника", 0.10);
        Product p2 = new Product(2, "Мышка", "Игровая", 15000, 20, "Периферия", 0);

        Order order = new Order(1001, client);
        order.addProduct(p1, 1);
        order.addProduct(p2, 2);

        order.applyPromo("SALE10");
        order.calculateTotal();

        PaymentMethod payment = new CardPayment(order.getTotal());
        payment.process();

        Delivery delivery = new Delivery(1, client.getAddress(), new Courier("Бауыржан"));
        delivery.send();
        delivery.complete();

        Review r = new Review(client, p1, 5, "Супер товар!");
        client.addLoyaltyPoints(50);

        admin.logAction("Пользователь создал заказ #" + order.getId());

        System.out.println("=== Готово ===");
    }
}



abstract class User {
    protected int id;
    protected String name;
    protected String email;
    protected String address = "Не указан";
    protected String phone = "Не указан";
    protected String role;

    public User(String name, String email, String role) {
        this.name = name;
        this.email = email;
        this.role = role;
    }

    public void register() {}
    public void login() {}

    public String getAddress() { return address; }
}

class Client extends User {
    private int loyaltyPoints = 0;

    public Client(String name, String email) {
        super(name, email, "CLIENT");
    }

    public void addLoyaltyPoints(int points) {
        loyaltyPoints += points;
    }
}

class Admin extends User {
    public Admin(String name, String email) {
        super(name, email, "ADMIN");
    }

    public void logAction(String action) {
        System.out.println("[LOG] " + action);
    }
}



class Product {
    private int id;
    private String name;
    private String description;
    private double price;
    private int stock;
    private String category;
    private double discount; 

    public Product(int id, String name, String description, double price, int stock, String category, double discount) {
        this.id = id;
        this.name = name;
        this.description = description;
        this.price = price;
        this.stock = stock;
        this.category = category;
        this.discount = discount;
    }

    public double getFinalPrice() {
        return price - price * discount;
    }
}



class Order {
    private int id;
    private Client client;
    private double total;
    private String promoCode;
    private java.util.List<OrderItem> items = new java.util.ArrayList<>();

    enum Status { CREATED, PROCESSING, DELIVERING, COMPLETED, CANCELED }
    private Status status = Status.CREATED;

    public Order(int id, Client client) {
        this.id = id;
        this.client = client;
    }

    public void addProduct(Product p, int quantity) {
        items.add(new OrderItem(p, quantity));
    }

    public void applyPromo(String code) {
        this.promoCode = code;
    }

    public void calculateTotal() {
        total = 0;
        for (OrderItem i : items) {
            total += i.getProduct().getFinalPrice() * i.getQuantity();
        }
        if ("SALE10".equals(promoCode)) total *= 0.9;
    }

    public void cancel() { status = Status.CANCELED; }

    public void pay() { status = Status.PROCESSING; }

    public int getId() { return id; }
    public double getTotal() { return total; }
}

class OrderItem {
    private Product product;
    private int quantity;

    public OrderItem(Product p, int q) {
        this.product = p;
        this.quantity = q;
    }

    public Product getProduct() { return product; }
    public int getQuantity() { return quantity; }
}



abstract class PaymentMethod {
    protected double amount;
    protected String status = "NEW";

    public PaymentMethod(double amount) {
        this.amount = amount;
    }

    public abstract void process();
    public abstract void refund();
}

class CardPayment extends PaymentMethod {
    public CardPayment(double amount) { super(amount); }

    @Override
    public void process() {
        status = "PAID";
        System.out.println("Оплачено картой: " + amount + " тг.");
    }

    @Override
    public void refund() {
        status = "REFUNDED";
    }
}

class WalletPayment extends PaymentMethod {
    public WalletPayment(double amount) { super(amount); }

    @Override
    public void process() {
        status = "PAID";
        System.out.println("Оплачено кошельком: " + amount + " тг.");
    }

    @Override
    public void refund() {
        status = "REFUNDED";
    }
}



class Delivery {
    private int id;
    private String address;
    private Courier courier;
    private String status = "WAITING";

    public Delivery(int id, String address, Courier courier) {
        this.id = id;
        this.address = address;
        this.courier = courier;
    }

    public void send() {
        status = "ON_THE_WAY";
        System.out.println("Заказ отправлен. Курьер: " + courier.getName());
    }

    public void complete() {
        status = "DELIVERED";
        System.out.println("Заказ доставлен!");
    }
}

class Courier {
    private String name;

    public Courier(String name) {
        this.name = name;
    }

    public String getName() { return name; }
}



class Review {
    private Client client;
    private Product product;
    private int rating;
    private String comment;

    public Review(Client client, Product product, int rating, String comment) {
        this.client = client;
        this.product = product;
        this.rating = rating;
        this.comment = comment;
    }
}
