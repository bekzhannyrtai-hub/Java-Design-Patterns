import java.util.ArrayList;
import java.util.Date;
import java.util.List;
import java.util.stream.Collectors;

class Book {
    private String title;
    private String author;
    private String isbn;
    private boolean isAvailable;

    public Book(String title, String author, String isbn) {
        this.title = title;
        this.author = author;
        this.isbn = isbn;
        this.isAvailable = true;
    }

    public String getIsbn() {
        return isbn;
    }

    public boolean isAvailable() {
        return isAvailable;
    }

    public void markAsLoaned() {
        this.isAvailable = false;
    }

    public void markAsAvailable() {
        this.isAvailable = true;
    }
}

class Reader {
    private int id;
    private String name;
    private String email;

    public Reader(int id, String name, String email) {
        this.id = id;
        this.name = name;
        this.email = email;
    }

    public int getId() {
        return id;
    }

    public String getName() {
        return name;
    }

    public void borrowBook(Book book) {
    }

    public void returnBook(Book book) {
    }
}

class Loan {
    private Book book;
    private Reader reader;
    private Date loanDate;
    private Date returnDate;

    public Loan(Book book, Reader reader) {
        this.book = book;
        this.reader = reader;
        this.loanDate = new Date();
    }

    public Book getBook() {
        return book;
    }

    public Reader getReader() {
        return reader;
    }

    public void issueLoan() {
        book.markAsLoaned();
        System.out.println("Книга '" + book.getIsbn() + "' выдана читателю " + reader.getName());
    }

    public void completeLoan() {
        this.returnDate = new Date();
        book.markAsAvailable();
        System.out.println("Книга '" + book.getIsbn() + "' возвращена читателем " + reader.getName());
    }
}

class LibraryManager {
    private List<Book> books = new ArrayList<>();
    private List<Reader> readers = new ArrayList<>();
    private List<Loan> loans = new ArrayList<>();

    public void addBook(Book book) {
        books.add(book);
    }

    public Book findBook(String isbn) {
        return books.stream().filter(b -> b.getIsbn().equals(isbn)).findFirst().orElse(null);
    }

    public Reader findReader(int id) {
        return readers.stream().filter(r -> r.getId() == id).findFirst().orElse(null);
    }

    public Loan issueLoan(String isbn, int readerId) {
        Book book = findBook(isbn);
        Reader reader = findReader(readerId);

        if (book != null && reader != null && book.isAvailable()) {
            Loan loan = new Loan(book, reader);
            loan.issueLoan();
            loans.add(loan);
            return loan;
        }
        return null;
    }

    public boolean returnBook(String isbn) {
        Loan activeLoan = loans.stream()
            .filter(l -> l.getBook().getIsbn().equals(isbn) && l.returnDate == null)
            .findFirst().orElse(null);

        if (activeLoan != null) {
            activeLoan.completeLoan();
            return true;
        }
        return false;
    }

    public List<Book> getAvailableBooks() {
        return books.stream().filter(Book::isAvailable).collect(Collectors.toList());
    }

    public List<Book> getLoanedBooks() {
        return books.stream().filter(b -> !b.isAvailable()).collect(Collectors.toList());
    }
}

class Librarian {
    private int id;
    private String name;
    private String position;
    private LibraryManager manager;

    public Librarian(int id, String name, String position, LibraryManager manager) {
        this.id = id;
        this.name = name;
        this.position = position;
        this.manager = manager;
    }

    public void addBook(Book book) {
        manager.addBook(book);
        System.out.println(name + " добавил книгу: " + book.getIsbn());
    }

    public void removeBook(String isbn) {
        // Для простоты в этом примере не реализовано удаление из LibraryManager
        System.out.println(name + " удалил книгу (ISBN): " + isbn);
    }
}

public class LibrarySystem {
    public static void main(String[] args) {
        LibraryManager manager = new LibraryManager();
        Librarian anna = new Librarian(1, "Анна", "Главный библиотекарь", manager);

        Book book1 = new Book("Война и мир", "Л. Толстой", "978-5389086118");
        Book book2 = new Book("Преступление и наказание", "Ф. Достоевский", "978-5389108155");

        anna.addBook(book1);
        anna.addBook(book2);

        Reader petr = new Reader(101, "Петр Иванов", "petr@mail.ru");
        manager.readers.add(petr);

        Loan loan1 = manager.issueLoan("978-5389086118", 101);
        
        System.out.println("Доступных книг: " + manager.getAvailableBooks().size());
        System.out.println("Выданных книг: " + manager.getLoanedBooks().size());

        if (manager.returnBook("978-5389086118")) {
            System.out.println("Возврат успешно оформлен.");
        }
    }
}
